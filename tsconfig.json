{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@github/catalyst": ["catalyst/src/*"],
      "@catalyst/*": ["*/src"]
    }
  },
  "references": [{"path": "./catalyst"}]
}
