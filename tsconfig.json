{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  }
}
